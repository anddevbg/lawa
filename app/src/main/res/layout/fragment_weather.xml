<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff80cedd"
    tools:context=".WeatherActivityFragment"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_weather_imageView"
        android:src="@drawable/sunny"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="22ºC"
        android:textSize="50sp"
        android:id="@+id/temperature_textView"
        android:layout_below="@+id/current_weather_imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Veliko City"
        android:id="@+id/city_textView"
        android:textSize="42sp"
        android:layout_below="@+id/temperature_textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Min"
        android:textSize="20sp"
        android:id="@+id/min_temptextView"
        android:layout_below="@+id/city_textView"
        android:layout_alignLeft="@+id/temperature_textView"
        android:layout_alignStart="@+id/temperature_textView"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Max"
        android:textSize="20sp"
        android:id="@+id/max_temp_textView"
        android:layout_below="@+id/min_temptextView"
        android:layout_alignLeft="@+id/min_temptextView"
        android:layout_alignStart="@+id/min_temptextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="30ºC"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_below="@+id/city_textView"
        android:layout_alignRight="@+id/temperature_textView"
        android:layout_alignEnd="@+id/temperature_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="15ºC"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/temperature_textView" />
</RelativeLayout>
