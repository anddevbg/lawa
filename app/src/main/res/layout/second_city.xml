<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"/>


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:id="@+id/current_weather_imageView"
            android:src="@drawable/sunny"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="29ºC"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:textSize="50sp"
            android:id="@+id/temperature_textView"
            android:layout_below="@+id/current_weather_imageView"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Los Angeles"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:id="@+id/city_textView"
            android:textSize="42sp"
            android:gravity="center"
            android:layout_below="@+id/temperature_textView"
            android:layout_centerHorizontal="true" />



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="20ºC"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/min_temp_textView"
            android:layout_below="@+id/city_textView"
            android:layout_alignRight="@+id/temperature_textView"
            android:layout_alignEnd="@+id/temperature_textView" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="34ºC"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:textSize="20sp"
            android:id="@+id/max_temp_textView"
            android:layout_below="@+id/min_temp_textView"
            android:layout_alignRight="@+id/temperature_textView" />



</LinearLayout>