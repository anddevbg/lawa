            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/day3_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/day4_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/day5_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.anddevbg.lawa.weathergraph.WeatherGraphView
        android:id="@+id/weather_graph_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

